<script>
  const dropDown = document.querySelector(".dropdown-menu");
  const badge = document.querySelector(".badge-count");
  const adminDropDown = document.querySelector(".admin-dropdown");
  const dropDownBtn = document.querySelector("#dropdownMenuButton");

  let data = {
    user: "<%- id %>",
  };

  // toggle notification
  let toogleNoti = async () => {
    dropDown.classList.toggle("show");
  };

  dropDownBtn.addEventListener("click", toogleNoti);

  const fetchNotification = async () => {
    let config = {
      method: "POST",
      url: `${baseUrl}admin/notification`,
      data: data,
    };

    let result = await axios(config)
      .then(function (response) {
        return response;
      })
      .catch(function (error) {
        return error;
      });

    if (result.status !== 200) {
      console.log(result);
    }

    let ticketIndex = result.data.findIndex((object) => {
      return object.type === "ticket";
    });

    let commentIndex = result.data.findIndex((object) => {
      return object.type === "comment";
    });

    let totalNotification =
      result.data[ticketIndex].data.length +
      result.data[commentIndex].data.length;

    if (totalNotification !== 0) {
      badge.style.display = "inline-block";
      adminDropDown.style.padding = "0px 0px";
      badge.innerHTML = totalNotification;
      return;
    }

    badge.style.display = "none";
    return;
  };

  onload = async (event) => {
    fetchNotification();
  };
</script>
